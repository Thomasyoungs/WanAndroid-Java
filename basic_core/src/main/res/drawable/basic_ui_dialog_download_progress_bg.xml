<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="9999dp" />
            <gradient
                android:startColor="?colorLine"
                android:centerColor="?colorLine"
                android:centerY="0"
                android:endColor="?colorLine"
                android:angle="270" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="9999dp" />
                <gradient
                    android:startColor="?colorLine"
                    android:centerColor="?colorLine"
                    android:centerY="0"
                    android:endColor="?colorLine"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="9999dp" />
                <gradient
                    android:startColor="?colorMain"
                    android:centerColor="?colorMain"
                    android:centerY="0"
                    android:endColor="?colorMain"
                    android:angle="270" />
            </shape>
        </clip>
    </item>


</layer-list>